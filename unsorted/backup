#!/bin/bash

DM=$(date +"%d%b")

DIR="Books"
echo Starting backup of /mnt/MediaShare/$DIR...
tar -cvpzf /mnt/Backup/$DIR/$DIR-$DM.tar.gz -g $DIR-$DM.snap /mnt/MediaShare/$DIR
split -d -b 3900m /mnt/Backup/$DIR/$DIR-$DM.tar.gz /mnt/Backup/$DIR/$DIR-$DM.tar.gz
rm $DIR-$DM.tar.gz
echo Finished backup of /mnt/MediaShare/$DIR...

